{% extends "layouts/base.twig" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-page">
                <h1 class="display-1 text-danger">{{ error_code }}</h1>
                <h2 class="mb-4">{{ error_message }}</h2>
                <p class="text-muted mb-4">
                    {{ 'errors.server_error_description'|trans }}
                </p>
                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-3">
                        <i class="fas fa-home me-2"></i>{{ 'common.home'|trans }}
                    </a>
                    <a href="javascript:location.reload()" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-2"></i>{{ 'common.try_again'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
