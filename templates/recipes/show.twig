{% extends "layouts/base.twig" %}

{% block title %}{{ recipe.title|default('Recipe') }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-6">
        <a href="/recipes" class="text-blue-600 hover:text-blue-800 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            {{ translations.recipes.back_to_recipes }}
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Image et informations principales -->
        <div class="lg:col-span-1">
            {% if recipe.image_url %}
            <div class="rounded-lg overflow-hidden shadow-lg mb-6">
                <img src="{{ recipe.image_url }}" alt="{{ recipe.title|default('Recipe') }}" class="w-full h-64 object-cover">
            </div>
            {% else %}
            <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center shadow-lg mb-6">
                <span class="text-gray-400">{{ translations.recipes.no_image }}</span>
            </div>
            {% endif %}

            <!-- Informations rapides -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">{{ translations.recipes.quick_info }}</h3>
                
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">{{ translations.recipes.cooking_time }}</span>
                        <span class="font-medium">{{ recipe.cook_time }} {{ translations.recipes.minutes }}</span>
                    </div>
                    
                    <div class="flex justify-between">
                        <span class="text-gray-600">{{ translations.recipes.prep_time }}</span>
                        <span class="font-medium">{{ recipe.prep_time }} {{ translations.recipes.minutes }}</span>
                    </div>
                    
                    <div class="flex justify-between">
                        <span class="text-gray-600">{{ translations.recipes.servings }}</span>
                        <span class="font-medium">{{ recipe.servings }}</span>
                    </div>
                    
                    <div class="flex justify-between">
                        <span class="text-gray-600">{{ translations.recipes.difficulty }}</span>
                        <span class="font-medium">{{ recipe.difficulty }}</span>
                    </div>
                    
                    <div class="flex justify-between">
                        <span class="text-gray-600">{{ translations.recipes.category }}</span>
                        <span class="font-medium">{{ recipe.category }}</span>
                    </div>
                </div>

                <!-- Bouton favori -->
                <div class="mt-6 pt-4 border-t border-gray-200">
                    <button onclick="toggleFavorite('{{ recipe.id }}')" 
                            class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="{{ isFavorite ? 'currentColor' : 'none' }}" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        {{ isFavorite ? translations.recipes.remove_from_favorites : translations.recipes.add_to_favorites }}
                    </button>
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="lg:col-span-2">
            <!-- Titre et description -->
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ recipe.title|default('Recipe') }}</h1>
                <p class="text-lg text-gray-600 leading-relaxed">{{ recipe.description|default('A delicious recipe') }}</p>
            </div>

            <!-- IngrÃ©dients -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                <h2 class="text-2xl font-semibold text-gray-900 mb-4">{{ translations.recipes.ingredients }}</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {% for ingredient in recipe.ingredients %}
                    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                        <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
                        <span class="font-medium">{{ ingredient.formatted_quantity|default('') }}</span>
                        <span class="ml-2 text-gray-700">{{ ingredient.name|default('') }}</span>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Instructions -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                <h2 class="text-2xl font-semibold text-gray-900 mb-4">{{ translations.recipes.instructions }}</h2>
                <div class="space-y-4">
                    {% for step in recipe.instructions %}
                    <div class="flex">
                        <div class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center font-semibold mr-4">
                            {{ loop.index }}
                        </div>
                        <p class="text-gray-700 leading-relaxed">{{ step.text|default('') }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Informations nutritionnelles -->
            {% if recipe.nutrition %}
            <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                <h2 class="text-2xl font-semibold text-gray-900 mb-4">{{ translations.recipes.nutritional_info }}</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center p-3 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-blue-600">{{ recipe.nutrition.calories|default(0) }}</div>
                        <div class="text-sm text-gray-600">{{ translations.recipes.calories }}</div>
                    </div>
                    <div class="text-center p-3 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-green-600">{{ recipe.nutrition.protein|default(0) }}g</div>
                        <div class="text-sm text-gray-600">{{ translations.recipes.protein }}</div>
                    </div>
                    <div class="text-center p-3 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-yellow-600">{{ recipe.nutrition.carbs|default(0) }}g</div>
                        <div class="text-sm text-gray-600">{{ translations.recipes.carbs }}</div>
                    </div>
                    <div class="text-center p-3 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-red-600">{{ recipe.nutrition.fat|default(0) }}g</div>
                        <div class="text-sm text-gray-600">{{ translations.recipes.fat }}</div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Recettes similaires -->
            {% if relatedRecipes %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold text-gray-900 mb-4">{{ translations.recipes.related_recipes }}</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {% for relatedRecipe in relatedRecipes %}
                    <a href="/recipes/{{ relatedRecipe.id }}" class="block p-4 border border-gray-200 rounded-lg hover:border-blue-300 transition-colors">
                        <h3 class="font-semibold text-gray-900 mb-2">{{ relatedRecipe.title|default('Recipe') }}</h3>
                        <p class="text-sm text-gray-600">{{ (relatedRecipe.description|default('A delicious recipe'))|slice(0, 100) }}...</p>
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
function toggleFavorite(recipeId) {
    fetch(`/recipes/${recipeId}/favorite`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}
</script>
{% endblock %}
