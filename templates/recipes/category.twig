{% extends "layouts/base.twig" %}

{% block title %}{{ category.name }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Navigation -->
    <div class="mb-6">
        <a href="/recipes" class="text-blue-600 hover:text-blue-800 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            {{ translations.recipes.back_to_recipes }}
        </a>
    </div>

    <!-- En-tête de la catégorie -->
    <div class="mb-8">
        <div class="flex items-center mb-4">
            {% if category.icon %}
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                <span class="text-2xl">{{ category.icon }}</span>
            </div>
            {% endif %}
            <div>
                <h1 class="text-3xl font-bold text-gray-900">{{ category.name }}</h1>
                {% if category.description %}
                <p class="text-gray-600 mt-2">{{ category.description }}</p>
                {% endif %}
            </div>
        </div>
        
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <p class="text-blue-800">
                <span class="font-medium">{{ recipes|length }} {{ translations.recipes.recipes_in_category }}</span>
            </p>
        </div>
    </div>

    <!-- Filtres spécifiques à la catégorie -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">{{ translations.recipes.filter_by_category }}</h3>
        <form method="GET" action="/recipes" class="space-y-4">
            <input type="hidden" name="category" value="{{ category.slug }}">
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Difficulté -->
                <div>
                    <label for="difficulty" class="block text-sm font-medium text-gray-700 mb-2">{{ translations.recipes.difficulty }}</label>
                    <select id="difficulty" name="difficulty" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">{{ translations.recipes.all_difficulties }}</option>
                        {% for difficulty in difficulties %}
                        <option value="{{ difficulty.slug }}" {{ filters.difficulty == difficulty.slug ? 'selected' : '' }}>
                            {{ difficulty.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Type de régime -->
                <div>
                    <label for="diet_type" class="block text-sm font-medium text-gray-700 mb-2">{{ translations.recipes.diet_type }}</label>
                    <select id="diet_type" name="diet_type" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">{{ translations.recipes.all_diet_types }}</option>
                        {% for dietType in dietTypes %}
                        <option value="{{ dietType.slug }}" {{ filters.diet_type == dietType.slug ? 'selected' : '' }}>
                            {{ dietType.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Saison -->
                <div>
                    <label for="season" class="block text-sm font-medium text-gray-700 mb-2">{{ translations.recipes.season }}</label>
                    <select id="season" name="season" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">{{ translations.recipes.all_seasons }}</option>
                        {% for season in seasons %}
                        <option value="{{ season.slug }}" {{ filters.season == season.slug ? 'selected' : '' }}>
                            {{ season.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="flex justify-between items-center">
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors">
                    {{ translations.recipes.apply_filters }}
                </button>
                <a href="/recipes/{{ category.slug }}" class="text-gray-600 hover:text-gray-800">{{ translations.recipes.clear_filters }}</a>
            </div>
        </form>
    </div>

    <!-- Liste des recettes -->
    {% if recipes %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {% for recipe in recipes %}
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="relative">
                {% if recipe.image %}
                <img src="{{ recipe.image }}" alt="{{ recipe.title }}" class="w-full h-48 object-cover">
                {% else %}
                <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-400">{{ translations.recipes.no_image }}</span>
                </div>
                {% endif %}
                
                {% if recipe.is_favorite %}
                <div class="absolute top-2 right-2">
                    <span class="bg-red-500 text-white p-2 rounded-full">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                        </svg>
                    </span>
                </div>
                {% endif %}
            </div>

            <div class="p-4">
                <h3 class="font-semibold text-lg text-gray-900 mb-2">{{ recipe.title }}</h3>
                
                <div class="flex items-center text-sm text-gray-600 mb-3">
                    <span class="mr-4">{{ recipe.cooking_time }} {{ translations.recipes.minutes }}</span>
                    <span class="mr-4">{{ recipe.difficulty }}</span>
                    <span>{{ recipe.servings }} {{ translations.recipes.servings }}</span>
                </div>

                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ recipe.description }}</p>

                <div class="flex justify-between items-center">
                    <a href="/recipes/{{ recipe.id }}" class="text-blue-600 hover:text-blue-800 font-medium">
                        {{ translations.recipes.view_recipe }}
                    </a>
                    
                    <button class="text-gray-400 hover:text-red-500 transition-colors" 
                            onclick="toggleFavorite({{ recipe.id }})">
                        <svg class="w-5 h-5" fill="{{ recipe.is_favorite ? 'currentColor' : 'none' }}" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-12">
        <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">{{ translations.recipes.no_recipes_in_category }}</h3>
        <p class="text-gray-600">{{ translations.recipes.try_different_filters_or_category }}</p>
        
        <div class="mt-6">
            <a href="/recipes" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors">
                {{ translations.recipes.browse_all_recipes }}
            </a>
        </div>
    </div>
    {% endif %}
</div>

<script>
function toggleFavorite(recipeId) {
    fetch(`/recipes/${recipeId}/favorite`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}
</script>
{% endblock %}
