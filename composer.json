{
    "name": "prepmeal/meal-planner",
    "description": "Application de planification de repas annuelle avec gestion des saisons",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "doctrine/dbal": "^3.6",
        "stripe/stripe-php": "^13.0",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.4",
        "twig/twig": "^3.7",
        "symfony/http-foundation": "^6.3",
        "symfony/validator": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PrepMeal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrepMeal\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "stan": "phpstan analyse src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
