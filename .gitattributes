# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# Template files
*.twig text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.md text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Archives
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Executables
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Database files
*.sqlite binary
*.db binary
*.sql text eol=lf

# Logs (should be ignored but just in case)
*.log text eol=lf

# Cache files (should be ignored but just in case)
*.cache binary
